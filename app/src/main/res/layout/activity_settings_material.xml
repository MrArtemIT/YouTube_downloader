<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <Switch
        android:id="@+id/switch_debug"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:text="@string/set_debug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Theme.MaterialYou_settings"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="364dp"
        android:layout_height="99dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/material_switch"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:text="@string/material_string"
        app:layout_constraintEnd_toEndOf="@+id/switch_debug"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switch_debug"
        app:layout_constraintTop_toBottomOf="@+id/switch_debug" />

</androidx.constraintlayout.widget.ConstraintLayout>