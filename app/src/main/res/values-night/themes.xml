<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouTube_downloader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_backgroung</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/green_backgroung</item>

    </style>
    <style name="Theme.YouTube_downloader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.YouTube_downloader.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.YouTube_downloader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="Theme.MaterialYou" parent="Theme.Material3.DynamicColors.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_neutral80</item>
        <item name="colorOnPrimary">@color/material_dynamic_neutral50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_neutral80</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_neutral80</item>
        <item name="colorOnSecondary">@color/material_dynamic_neutral80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_neutral10</item>
        <!-- Customize your theme here. -->
        <item name="android:color">@color/material_dynamic_neutral20</item>
        <item name="android:button">@color/material_dynamic_neutral60</item>

        <item name="android:windowBackground">@color/material_dynamic_neutral10</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Theme.secondary_buttons" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:backgroundTint">@color/material_dynamic_primary70</item>
        <item name="colorAccent">@color/material_dynamic_primary60</item>
    </style>
    <!-- Тема для настроек -->
    <style name="Theme.MaterialYou_settings" parent="Theme.Material3.DynamicColors.Dark">
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/material_dynamic_neutral50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_neutral80</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_neutral80</item>
        <item name="colorOnSecondary">@color/material_dynamic_neutral80</item>

    </style>


</resources>